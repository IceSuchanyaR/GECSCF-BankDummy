         <input type="checkbox" ng-disabled="$ctrl.disabled"
            checklist-model="$ctrl.model"
            checklist-value="item"
            checklist-comparator="$ctrl.doList.comparator" />
         {{ item.label | translate }}

      </label>
   </div>
</div>