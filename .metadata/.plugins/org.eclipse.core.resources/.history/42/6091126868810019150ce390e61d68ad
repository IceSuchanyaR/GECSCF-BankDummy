<div class="row-fit">
   <label ng-if="$ctrl.doList.items.length == 0"
      class="label-thin"> N/A
   </label>

   <div class="col-6 no-padding-horizontal" ng-if="$ctrl.doList.items.length> 0"
      ng-repeat="item in $ctrl.doList.items track by $index">
